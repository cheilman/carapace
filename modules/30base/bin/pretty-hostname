#!/usr/bin/env zsh
#
# Make a pretty hostname
#

HOSTNAME="`hostname -s`"
if [ "${HOSTNAME}" = "ua41f72940dc05241fd19" ]; then
    # Change hostname (dev desktop)
    echo "dev"
elif [ "${HOSTNAME}" = "ufc3fdb4224ce56d0d8f0" ]; then
    # Change hostname (new laptop 2016/2)
    echo "laptop"
elif [ "${HOSTNAME}" = "ufc3fdb4224ce57603ccf" ]; then
    # Change hostname (newly imaged laptop 2016/6)
    echo "laptop"
elif [ "${HOSTNAME}" = "ufc3fdb4224ce58052331" ]; then
    # Change hostname (newly imaged laptop 2016/10)
    echo "laptop"
elif [ "${HOSTNAME}" = "uf01faf27cabd52e01163" ]; then
    # Change hostname (orig laptop 2014/1)
    echo "laptop"
elif [ "${HOSTNAME}" = "ip-172-31-47-150" ]; then
    # Change hostname (old mist)
    echo "mist"
elif [ "${HOSTNAME}" = "ip-172-31-4-98" ]; then
    # Change hostname (new mist 2017/01)
    echo "mist"
elif [ "${HOSTNAME}" = "heilmanc-desktop-2a-i-4c9656d8" ]; then
    # Change hostname (cloud desktop 2016/07/26)
    echo "cloud-dev-old"
elif [ "${HOSTNAME}" = "heilmanc-desktop-2a-fd834f85" ]; then
    # Change hostname (cloud desktop 2016/07/26)
    echo "cloud-dev"
else
    echo "$HOSTNAME"
fi


#!/bin/bash
#
# Pull out all the lines after "Actions" in recently modified markdown files
#

# How many days in the past to look, with default
pastDays=${1:-14}

for i in `find -mtime -${pastDays} -type f`; do
    grep -e '^Actions$' $i >&/dev/null
    if [ $? -eq 0 ]; then
        ansi --magenta "-- $i --"
        awk 'BEGIN { RS="Actions\n-------\n" } { if (NR > 1) print $0 } ' $i
    fi
done


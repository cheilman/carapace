#!/usr/bin/env zsh
#
# Make a pretty hostname
#

HOSTNAME="$(hostname)"

if [ "${HOSTNAME}" = "cheilman.pit.corp.google.com" ]; then
    # Google Desktop 2018/11/19
    echo "gDesktop"
elif [ "${HOSTNAME}" = "cheilman.c.googlers.com" ]; then
    # Google Cloudtop 2018/11/19
    echo "gCloudtop"
else
    HOSTNAME="$(hostname -s)"
    if [ "${HOSTNAME}" = "cheilman-glaptop" ]; then
        # Google Laptop 2018/11/19
        echo "gLaptop"
    elif [ "${HOSTNAME}" = "ufc3fdb4224ce58052331" ]; then
        # Change hostname (newly imaged laptop 2016/10)
        echo "laptop"
    elif [ "${HOSTNAME}" = "ip-172-31-4-98" ]; then
        # Change hostname (new mist 2017/01)
        echo "mist"
    elif [ "${HOSTNAME}" = "heilmanc-desktop-2a-779a3607" ]; then
        # Change hostname (cloud desktop 2018/02/27)
        echo "cloud-dev"
    else
        echo "$HOSTNAME"
    fi
fi

